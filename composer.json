{
  "name": "digitickets/omnipay-meridian-gift-card",
  "type": "library",
  "description": "Payment Gateway driver for Meridian Gift Cards",
  "keywords": [
    "DigiTickets",
    "Meridian",
    "Gift card",
    "gateway",
    "merchant",
    "omnipay",
    "pay",
    "payment"
  ],
  "homepage": "https://github.com/digitickets/omnipay-meridian-gift-card",
  "license": "MIT",
  "authors": [
    {
      "name": "Glenn Jenkins",
      "email": "glenn.jenkins@digitickets.co.uk",
      "role": "Developer"
    }
  ],
  "autoload": {
    "psr-0": {
      "scpService": "lib"
    },
    "psr-4": {
      "DigiTickets\\MeridianGiftCard\\": "src"
    }
  },
  "require": {
    "digitickets/omnipay-abstract-voucher": "^2.0",
    "php": "^7",
    "symfony/event-dispatcher": "^2.8"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^2.0",
    "omnipay/tests": "~2.0",
    "satooshi/php-coveralls": "^1.0"
  },
  "scripts": {
    "run-sa": "vendor/bin/phpstan analyse --ansi --no-progress -c phpstan.neon -l 4 src tests",
    "run-fixer": "vendor/bin/php-cs-fixer fix",
    "run-tests": "vendor/bin/phpunit"
  }
}
